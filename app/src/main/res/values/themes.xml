<resources>
    <!-- Base application theme. -->
    <style name="Theme.NatlexTestTask" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialAlertDialogTheme">@style/appMaterialAlertDialog</item>
        <item name="switchStyle">@style/appMaterialSwitch</item>
        <item name="sliderStyle">@style/appMaterialSlider</item>
    </style>
</resources>