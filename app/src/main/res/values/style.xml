<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="appMaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/alertButtonPositive</item>
        <item name="buttonBarNegativeButtonStyle">@style/alertButtonNegative</item>
    </style>

    <style name="alertButtonPositive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/alert_dialog_button_text_size</item>
        <item name="android:textColor">@color/positive_button</item>
    </style>

    <style name="alertButtonNegative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/negative_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/alert_dialog_button_text_size</item>
    </style>

    <style name="appMaterialSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="track">@drawable/switch_track</item>
    </style>

    <style name="appMaterialSlider" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/themeOverlayAppSlider</item>
        <item name="labelStyle">@style/appSliderLabel</item>
    </style>

    <style name="themeOverlayAppSlider" parent="">
        <item name="colorPrimary">@color/white_90</item>
        <item name="colorOnPrimary">@color/bg_gradient_dark</item>
        <item name="colorOnSurface">@color/white_90</item>
    </style>

    <style name="appSliderLabel" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/white_90</item>
        <item name="backgroundTint">@color/bg_gradient_dark</item>
    </style>
</resources>
